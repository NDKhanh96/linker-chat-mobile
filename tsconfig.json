{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "~assets/*": [
                "assets/*"
            ],
            "~components/*": [
                "src/components/*"
            ],
            "~utils/*": [
                "src/utils/*"
            ],
            "~/*": [
                "src/*"
            ],
            "~root/*": [
                "./*"
            ],
            "tailwind.config": [
                "./tailwind.config.js"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "nativewind-env.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
