{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports":"always"
    },
    "typescript.preferences.preferTypeOnlyAutoImports": true,
    "tailwindCSS.experimental.classRegex": [
      "className:\\s*['\"]([^'\"]*)['\"]",
      ["tva\\((([^()]*|\\([^()]*\\))*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ],
    "cSpell.words": [
        ".easignore",
        "clsx",
        "Entypo",
        "extrablack",
        "Favourite",
        "flatlist",
        "Fontisto",
        "forwardslash",
        "gluestack",
        "hookform",
        "Ionicons",
        "jscodeshift",
        "legendapp",
        "logomark",
        "lucide",
        "notifee",
        "paperplane",
        "Pressable",
        "reduxjs",
        "roboto",
        "romaji",
        "Tamagui",
        "Totp",
        "unimodules",
        "unistyles"
    ],
    "cSpell.ignorePaths": [
        "yarn.lock",
        "package-lock.json",
        "node_modules/**",
        ".gitignore",
        ".env",
        ".easignore",
    ]
}